<div class="container segment" id="main-segment">
    <div class="container" id="colors-title">
        <h2 class="ui header" id="color-header">Colour Guesser</h2>
        <span id="colorDisplay">RGB</span>
    </div>
    <div class="ui grid">

        <div class="five wide column" id="game-menu">
                
