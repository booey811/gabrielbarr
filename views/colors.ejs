                    <option value="">Difficulty</option>
                    <option value=3>Easy</option>
                    <option value=6>Medium</option>
                    <option value=9>Hard</option>
                </select>
            </div>
        </div>


        <div class="eleven wide column">


            <div id="colors-container">
                <div class="colors-square"></div>
                <div class="colors-square"></div>
                <div class="colors-square"></div>
                <div class="colors-square"></div>
                <div class="colors-square"></div>
                <div class="colors-square"></div>
            </div>
        </div>
    </div>
</div>
